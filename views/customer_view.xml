<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="customer_form_view" model="ir.ui.view">
        <field name="name">Customer</field>
        <field name="model">customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cpf"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="cep"/>
                            <field name="city" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="rents" string="AluguÃ©is" attrs="{'invisible':[('rent_ids','=',[])]}">
                            <field name="rent_ids">
                                <tree>
                                    <field name="customer_id"/>
                                    <field name="book_id"/>
                                    <field name="date_time_fixed"/>
                                    <field name="state" decoration-success="(state == 'returned')"
                                           decoration-info="(state == 'rented')"
                                           decoration-danger="(state == 'pending')" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="customer_list_view" model="ir.ui.view">
        <field name="name">Customer</field>
        <field name="model">customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cpf"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
    <record id="customer_action" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">customer</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="debook_menu" name="deBook" web_icon="debook,static/description/icon.png"/>
    <menuitem id="customer_sub_menu" action="customer_action" name="Cliente" parent="debook_menu" sequence="2"/>
</odoo>